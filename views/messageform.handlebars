{{!-- {{/each}} --}}
  <!-- This is the form for adding a new dish -->
  <div class="add-message-container">
    <h2>
      Post Your Article Here
    </h2>
    <form class="new-article-form" action="/api/content" method="POST">
      <label for="content_title">
        Message Title:
      </label>
      <br />
      <textarea id="content_title" name="title" rows="2" cols="30">
      {{title}}
    </textarea>
      <br />
      <label for="content_desc">
        Brief Description of Article:
      </label>
      <br />
      <textarea id="content_desc" name="description" rows="5" cols="30">
      {{description}}
    </textarea>
      <br />
      <label for="content_url">
        Article / URL:
      </label>
      <br />
      <textarea id="content_url" name="article_url" rows="2" cols="30">
      {{article_url}}
    </textarea>
      <br />
      <br />

      {{!-- {{!-- {{#if }}
      <input type="checkbox" id="" name="" checked />
      {{else}}
      <input type="checkbox" id="" name="" />
      {{/if}} --}}

      <br />
      <button type="submit" value="Submit">
        Submit
      </button>
    </form>
  </div>
</div>

